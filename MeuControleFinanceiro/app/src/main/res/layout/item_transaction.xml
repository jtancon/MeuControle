<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/dark_surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    android:layout_marginBottom="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Fundo do Ícone -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/category_icon_background"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardBackgroundColor="@color/dark_surface_variant"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Ícone da Categoria -->
            <ImageView
                android:id="@+id/category_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                tools:src="@drawable/ic_shopping_bag"
                android:contentDescription="@string/category_icon_description"
                app:tint="?attr/incomeColor"
                tools:tint="?attr/expenseColor" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Descrição e Categoria -->
        <TextView
            android:id="@+id/transaction_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/text_primary_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/category_icon_background"
            app:layout_constraintEnd_toStartOf="@id/transaction_amount"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Compras de Supermercado" />

        <TextView
            android:id="@+id/transaction_category_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/text_secondary_dark"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/category_icon_background"
            app:layout_constraintEnd_toStartOf="@id/transaction_amount"
            app:layout_constraintTop_toBottomOf="@id/transaction_description"
            tools:text="Alimentação • Hoje" />

        <!-- Valor da Transação -->
        <TextView
            android:id="@+id/transaction_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="?attr/incomeColor"
            tools:textColor="?attr/expenseColor"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="- R$ 120,50" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
