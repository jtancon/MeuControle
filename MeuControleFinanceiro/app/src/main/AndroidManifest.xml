<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MeuControleFinanceiro">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MeuControleFinanceiro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Novas Activities adicionadas aqui -->
        <activity android:name=".AllTransactionsActivity"
            android:exported="false"
            android:label="@string/all_transactions_title"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".ProfileActivity"
            android:exported="false"
            android:label="@string/profile_title"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".AddIncomeActivity"
            android:exported="false"
            android:label="@string/add_income_title"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".AddExpenseActivity"
            android:exported="false"
            android:label="@string/add_expense_title"
            android:parentActivityName=".MainActivity" />
        <!-- Fim das novas Activities -->

    </application>
</manifest>